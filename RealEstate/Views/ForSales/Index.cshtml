@model IEnumerable<RealEstate.Models.ForSale>

@{
    ViewData["Title"] = "Find a Home";
}

<h1>Current Listings!</h1>

<p>
    <a asp-action="Create">Create a New Property</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rooms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SqFootage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @if (item.Photo != null) {
                    <img src="~/NewFolder/NewFolder/@item.Photo" alt="House Image" class="thumb" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SqFootage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ForSaleId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ForSaleId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ForSaleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@model IEnumerable<RealEstate.Models.City>

@{
    ViewData["Title"] = "Cities";
}

<h1>Cities with Available Listings</h1>
@if (User.IsInRole("Administrator"))
{
    <p>
        <a asp-action="Create">Add a New City</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AreaCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaCode)
            </td>
            @if (User.IsInRole("Administrator"))
            {
             <td>
                <a asp-action="Edit" asp-route-id="@item.CityId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CityId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CityId">Delete</a>
             </td>
            }
        </tr>
}
    </tbody>
</table>
